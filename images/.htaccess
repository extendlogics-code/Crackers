# Harden uploads: disable script execution in images
<IfModule mod_php.c>
  php_flag engine off
</IfModule>
<IfModule mod_php7.c>
  php_flag engine off
</IfModule>
<IfModule mod_php8.c>
  php_flag engine off
</IfModule>

<FilesMatch "\.(php|phtml|phar|pl|py|cgi|sh)$">
  Require all denied
</FilesMatch>

Options -ExecCGI
RemoveHandler .php .phtml .phar .pl .py .cgi .sh
RemoveType .php .phtml .phar .pl .py .cgi .sh
